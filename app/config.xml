<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns = "http://www.w3.org/ns/widgets"
    xmlns:gap = "http://phonegap.com/ns/1.0"
    id = "io.wq.species"
    version = "{{version}}" >
  <name>Species Tracker</name>
  <description>
    A prototype Citizen Science app for species monitoring.
  </description>

  <author href="https://wq.io" email="andrew@wq.io">
    S. Andrew Sheppard
  </author>

  <platform name="android">
    {{#android.icons}}
    <icon src="{{filename}}" density="{{alias}}" />
    {{/android.icons}}
  </platform>

  <platform name="ios">
    {{#ios.icons}}
    <icon src="{{filename}}" width="{{width}}" height="{{height}}" />
    {{/ios.icons}}
  </platform>

  <platform name="windows">
    <preference name="windows-appx-target" value="8.1-phone" />
    <preference name="windows-arch" value="anycpu" />
    {{#windows.icons}}
    <icon src="{{filename}}" width="{{width}}" height="{{height}}" />
    {{/windows.icons}}
    {{#windows-splash.icons}}
    <splash src="{{filename}}" width="{{width}}" height="{{height}}" />
    {{/windows-splash.icons}}
  </platform>

  <plugin name="cordova-plugin-camera" />
  <plugin name="cordova-plugin-geolocation" />
  <plugin name="cordova-plugin-dialogs" />
  <plugin name="cordova-plugin-whitelist" />
  <access origin="*" />

</widget>
